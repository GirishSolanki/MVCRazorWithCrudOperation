@model List<ACMESOFT.Entity.Person>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Person List</h6>

    </div>
    <div class="card-header py-3">
        <a href="/Person/Person" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"> Add Person</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Birth Date</th>
                        <th>Employee Number</th>
                        <th>Join Date</th>
                        <th>Termination Date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Birth Date</th>
                        <th>Employee Number</th>
                        <th>Join Date</th>
                        <th>Termination Date</th>
                        <th>Action</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var person in Model)
                    {
                        var trId = "tr" + person.PersonId;
                        <tr id="@trId">
                            <td>@person.FirstName</td>
                            <td>@person.LastName</td>
                            <td>@person.BirthDate</td>
                            <td>@person.Employee.EmployeeNumber</td>
                            <td>@person.Employee.EmployeeDate</td>
                            <td>@person.Employee.TerminationDate</td>
                            <td>
                                <a href="/Person/Person?PersonId=@person.PersonId" class="btn btn-success btn-circle btn-sm">
                                    <i class="fas fa-check"></i>
                                </a>
                                <a href="/Person/PersonList?handler=DeletePerson&personId=@person.PersonId" data-id="@trId" class="btn btn-danger btn-circle btn-sm btndelete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

